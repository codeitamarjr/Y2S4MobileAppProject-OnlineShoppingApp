<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:background="#45C34B"
        android:layout_height="?actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Welcome to the Shopping App"
            android:textSize="24sp"
            android:textColor="#fff"
            />

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProducts"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardElevation="50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bag" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="#4CAF50"
                android:fontFamily="sans-serif-black"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:text="Browser through the products"
                android:textSize="20sp"
                android:textColor="#1e1e1e"/>

            <Button
                android:id="@+id/openNewPageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Browsing Products"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mensCloth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cardElevation="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bag" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Men's"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#4CAF50"
                    android:fontFamily="sans-serif-black"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:text="Browser through the products"
                    android:textSize="20sp"
                    android:textColor="#1e1e1e"/>

                <Button
                    android:id="@+id/mensButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mens"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardElevation="50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="50dp"
        >

        <Button
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="About" />
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>